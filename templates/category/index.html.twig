{% extends "base.html.twig" %}
{% block title %}All categories
{% endblock %}

{% block body %}
	<h1 class="text-center">Toutes les catégories:
	</h1>

	{% for category in categories %}
    <a href="{{ path("category_show", { categoryName: category.name }) }}">

		<h2>{{ loop.index }}
			/
			- Catégorie :
			{{ category.name }}</h2>
    </a>
	{% else %}
		Aucune Catégorie trouvée
	{% endfor %}
{% endblock %}
